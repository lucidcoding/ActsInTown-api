<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
 
<hibernate-mapping>
 
    <class name="uk.co.luciditysoftware.actsintown.domain.entities.ConversationUser" table="`ConversationUser`">

        <id name="id" column="`Id`" type="uuid-char">
            <generator class="assigned" />
        </id>
        
        <many-to-one name="conversation" class="uk.co.luciditysoftware.actsintown.domain.entities.Conversation" column="ConversationId" not-null="true"/>
        
        <many-to-one name="user" class="uk.co.luciditysoftware.actsintown.domain.entities.User" column="UserId" not-null="true"/>

		<property name="joinedOn">
			<column name="joinedOn" not-null="true" />
		</property>
    </class>
</hibernate-mapping>